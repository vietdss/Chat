@{
    ViewBag.Title = "Create Chat";
}

<h2>Create New Chat</h2>

@using (Html.BeginForm("Create", "Chat", FormMethod.Post))
{
    <div class="form-group">
        <label for="chatName">Chat Name</label>
        @Html.TextBox("chatName", null, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="isGroup">Is this a Group Chat?</label>
        @Html.CheckBox("isGroup", false)
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="@Url.Action("Index", "Chat")" class="btn btn-secondary">Back</a>
}
